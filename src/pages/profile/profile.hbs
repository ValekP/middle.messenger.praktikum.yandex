---
title: Profile
stylesheet: "../../styles/base.scss"
script: "profile.js"
---

{{#extend "default"}}
    {{#content "main"}}
        <div class="layout">
            <div class="sidebar">
                <div class="close-block">
                    <button class="btn-circle">
                        <svg width="13" height="12" viewBox="0 0 13 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3.66446 5.20005L13 5.20005V6.80005L3.66454 6.80005L6.62469 10.5002L5.37531 11.4998L1.37531 6.49976L0.9755 6L1.37531 5.50024L5.37531 0.500244L6.62469 1.49976L3.66446 5.20005Z" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="content">
                <div class="profile-container">
                    <div class="profile">
                        <div class="profile__img">
                            <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M36 2H4C2.89543 2 2 2.89543 2 4V25.2667L14.6547 22.3139C15.5486 22.1053 16.4635 22 17.3814 22H22.6186C23.5365 22 24.4514 22.1053 25.3453 22.3139L38 25.2667V4C38 2.89543 37.1046 2 36 2ZM4 0C1.79086 0 0 1.79086 0 4V36C0 38.2091 1.79086 40 4 40H36C38.2091 40 40 38.2091 40 36V4C40 1.79086 38.2091 0 36 0H4ZM10.9091 14.5455C12.9174 14.5455 14.5455 12.9174 14.5455 10.9091C14.5455 8.90079 12.9174 7.27273 10.9091 7.27273C8.90082 7.27273 7.27276 8.90079 7.27276 10.9091C7.27276 12.9174 8.90082 14.5455 10.9091 14.5455Z" fill="#CDCDCD"/>
                            </svg>
                        </div>
                        <div class="profile__data-list">
                            <div class="profile-field">
                                <label for="email" class="profile-field__label">Почта</label>
                                <input type="text" name="email" class="profile-field__value" value="pochta@yandex.ru"/>
                            </div>
                            <div class="profile-field">
                                <label for="login" class="profile-field__label">Логин</label>
                                <input type="text" name="login" class="profile-field__value" value="ivanivanov"/>
                            </div>
                            <div class="profile-field">
                                <label for="first_name" class="profile-field__label">Имя</label>
                                <input type="text" name="first_name" class="profile-field__value" value="Иван"/>
                            </div>
                            <div class="profile-field">
                                <label for="second_name" class="profile-field__label">Фамилия</label>
                                <input type="text" name="second_name" class="profile-field__value" value="Иванов"/>
                            </div>
                            <div class="profile-field">
                                <label for="display_name" class="profile-field__label">Имя в чате</label>
                                <input type="text" name="display_name" class="profile-field__value" value="Иван"/>
                            </div>
                            <div class="profile-field">
                                <label for="phone" class="profile-field__label">Телефон</label>
                                <input type="text" name="phone" class="profile-field__value" value="+7 (909) 967 30 30"/>
                            </div>
                        </div>
                        <div class="profile__footer">
                            {{> button title="Сохранить" }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/content}}
{{/extend}}
