---
title: Login
stylesheet: "../../styles/base.scss"
script: "login.js"
---

{{#extend "default"}}
    {{#content "main"}}
        <div class="auth">
            <section class="auth-form">
                <div class="auth-form__header">
                    <h2>Вход</h2>
                </div>
                <div class="auth-form__main">
                    {{> input type="text" name="login" label="Логин" }}
                    {{> input type="password" name="password" label="Пароль" }}
                </div>
                <div class="auth-form__footer">
                    {{> button title="Авторизоваться" }}
                    <div class="auth-form__footer_link">
                        <a href="#">Нет аккаунта?</a>
                    </div>
                </div>
            </section>
        </div>
    {{/content}}
{{/extend}}
