{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": [
    "node_modules",
    "dist",
    ".parcel-cache",
    ".github",
    "src/server.js"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
